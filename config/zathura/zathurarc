set font "sans-serif 11"
set smooth-scroll true
set statusbar-home-title true
set selection-clipboard clipboard

map <BackSpace> navigate previous
map [fullscreen] <BackSpace> navigate previous

map ; focus_inputbar ":"
map ! focus_inputbar ":exec "

map u scroll half-up
map d scroll half-down

map c recolor

map x toggle_page_mode

map _ adjust_window best-fit
map - zoom out
map = zoom in
map + adjust_window width

map [ jumplist backward
map ] jumplist forward

